# HRMS Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env file to git!

# ============================================
# Environment Configuration
# ============================================
# Supported values: dev, test, staging, prod
ENVIRONMENT=dev

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=testdb

# Database Host (environment-specific)
# dev: localhost or db (docker)
# test/staging/prod: RDS endpoint
DB_HOST_DEV=db
DB_HOST_TEST=hrms-test-db.xxxxx.ap-south-1.rds.amazonaws.com
DB_HOST_STAGING=hrms-staging-db.xxxxx.ap-south-1.rds.amazonaws.com
DB_HOST_PROD=hrms-prod-db.xxxxx.ap-south-1.rds.amazonaws.com

# Database URL (auto-constructed based on ENVIRONMENT)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/testdb

# ============================================
# API Configuration
# ============================================
PORT=8000
PYTHONUNBUFFERED=1

# API URLs (environment-specific)
API_URL_DEV=http://localhost:8000
API_URL_TEST=https://test-api.hrms.zamait.in
API_URL_STAGING=https://staging-api.hrms.zamait.in
API_URL_PROD=https://api.hrms.zamait.in

# ============================================
# Frontend Configuration
# ============================================
# Frontend URLs (environment-specific)
REACT_APP_API_URL_DEV=http://localhost
REACT_APP_API_URL_TEST=https://test.hrms.zamait.in
REACT_APP_API_URL_STAGING=https://staging.hrms.zamait.in
REACT_APP_API_URL_PROD=https://hrms.zamait.in

# Active Frontend URL (set based on ENVIRONMENT)
REACT_APP_API_URL=http://localhost

# ============================================
# AWS Configuration (for staging/prod)
# ============================================
AWS_REGION=ap-south-1
AWS_ACCOUNT_ID=992914516109
ECR_REGISTRY=992914516109.dkr.ecr.ap-south-1.amazonaws.com

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL_DEV=DEBUG
LOG_LEVEL_TEST=INFO
LOG_LEVEL_STAGING=WARNING
LOG_LEVEL_PROD=ERROR

# Active Log Level (set based on ENVIRONMENT)
LOG_LEVEL=DEBUG
