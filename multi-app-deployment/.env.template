# Multi-App Deployment Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Environment Configuration
# ============================================
ENVIRONMENT=production

# ============================================
# HRMS Database Configuration
# ============================================
HRMS_POSTGRES_USER=postgres
HRMS_POSTGRES_PASSWORD=postgres
HRMS_POSTGRES_DB=testdb

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=INFO

# ============================================
# Domain Configuration
# ============================================
APP1_DOMAIN=dinesh-app1.zamait.in
APP2_DOMAIN=dinesh-app2.zamait.in

# ============================================
# SSL/TLS Configuration
# ============================================
# Set to 'true' after obtaining SSL certificates
SSL_ENABLED=false

# ============================================
# Email for Let's Encrypt (required for SSL)
# ============================================
LETSENCRYPT_EMAIL=admin@zamait.in
